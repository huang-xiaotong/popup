.temBg{
  width: 100%;
  height: 100vh;
  background: rgba(0,0,0,0.3);
  justify-content: center;
  align-items: center;
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}
.temCon{
  width: 543rpx;
  height: 537rpx;
  background: #fff;
  border-radius: 10rpx;
  position: relative;
  transform: scaleX(0);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.temImg{
  display: block;
  width: 100rpx;
  height: 100rpx;
}
.content{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 60rpx;
}
.content text{
  text-align: center;
}
.btnsBox{
  position: absolute;
  width: 90%;
  left: 5%;
  bottom: 30rpx;
  height: 90rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.btnsBox .btn{
  width: 40%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 5rpx;
  text-align: center;
  border: 1rpx solid #dadada;
  color: #333;
  background: #fff;
}